<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title></title>
</head>
<body>
<!--The content below is only a placeholder and can be replaced.-->


<!-- header -->
<%- include('../header') %>

<div class="container-fluid">
    <div class="row">
       

        <!-- menu -->
        <%- include('../menu') %>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">类别管理
                </li>
                <li class="active">类别列表
                </li>
            </ol>
            <!--
                列表展示
            -->
            <div class="table-responsive">
                <table class="table table-striped ">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>商品名称</th>
                        <th>商品图片</th>
                        <th>商品价格</th>
                        <th>商品类别</th>
                        <th>商品描述</th>
                       
                        <th class="text-center">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i=0;i<result.length;i++){ %>
                    <tr>
                        <td><%= result[i]._id %></td>
                        <td><%= result[i].name %></td>
                        <td>
                            
                            <img src="/uploads/<%= result[i].picname %>" width="50" height="50" alt="">
                        </td>
                        <td><%= result[i].price %></td>
                        <td><%= result[i].typeInfo[0].name %></td>
                        <td><%= result[i].desc %></td>
                        <td class="text-center"><a href="/product/edit?_id=<%= result[i]._id %>">修改</a>  <a href="/product/delete?_id=<%= result[i]._id %>&picname=<%= result[i].picname %>">删除</a></td>
                    </tr>
                    <% } %>

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

</body>
</html>